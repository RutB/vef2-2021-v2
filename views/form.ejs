<div class="results">
    <h2 class="results__header">Undirskriftir</h2>
    <% if (result.length > 0) { %>
    <table class="results__table">
      <tr>
        <th>Dags</th>
        <th>Nafn</th>
        <th>Athugasemd</th>
      </tr>
      <% result.forEach(( row ) => { %>
      <tr>
        <td> <%= locals.formatDate(row.signed) %></td>
        <% if (row.anonymous) { %>
          <td>anonymous</td>
        <% } else   { %>
          <td><%= row.name %></td>
        <% } %>
        <td><%= row.comment %></td>
      </tr>
      <% }) %>
    </table>
    <% } else { %>
      <h3 class="results__none">Það eru engar undirskriftir</h3>
    <% } %>
  </div>