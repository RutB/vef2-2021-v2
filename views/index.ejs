
 <%- include('header') -%>

  <div class="petitions">
      <form class="card" method="post" action="/" enctype="application/x-www-petition-urlencoded" >
        <label class="card__row<%= locals.isInvalid('name', errors) ? ' card__invalid' : ' ' %>">
          <p for="name">Nafn*</p>
          <input  class="card__input" id="name" type="text" name="name" value="<% name %>" >
        </label>
        <label class="card__row<%= locals.isInvalid('nationalId', errors) ?  ' card__invalid' : ' ' %>">
          <p for="nationalId">Kennitala*</p>
          <input class="card__input" id="nationalId"type="text" name="nationalId" value="<% nationalId %>">
        </label>
        <label class="card__row<%= locals.isInvalid('nationalId', errors) ?  ' card__invalid' : ' ' %>">
          <p for="comment">Athugasemd:</p>
          <textarea class="card__input" id="comment" type="text" name="comment" value="<% comment %>"></textarea>
        </label>
        <label class="card__anonymos">
          <div class="card__anon">
          <input class="card__check" type="checkbox" name="anonymous" value="true">
          <p class="">Ekki birta nafn á lista </p>
        </div>
        </label>

        <div class="card__errMsg">
          <% if (errors.length > 0) { %>
            <h2>Villur við undirskrift:</h2>
            <ul class="errors">
              <% errors.forEach((err) => { %>
                <li class="error"><label  ><%= err.msg %></label></li>
              <% }); %>
            </ul>
          <% } %>
        </div>
          <button class="petitions__button">Skrifa undir</button>
      </form>
    </div>

  <%- include('form') -%>
  <%- include('footer') -%>