<%- include('header') -%>
<main>
<div class="petition">
    <petition class="petition__signup" method="post" action="/" enctype="application/x-www-petition-urlencoded" >
      <label class="petition__row<%= locals.isInvalid('name', errors) ? ' petition--invalid' : ' ' %>">
        <p for="name">Nafn*</p>
        <input  class="input" id="name" type="text" name="name" value="<% name %>" >
      </label>
      <label class="petition__row<%= locals.isInvalid('nationalId', errors) ?  ' petition--invalid' : ' ' %>">
        <p for="nationalId">Kennitala*</p>
        <input class="input" id="nationalId"type="text" name="nationalId" value="<% nationalId %>">
      </label>
      <label class="petition__row<%= locals.isInvalid('nationalId', errors) ?  ' petition--invalid' : ' ' %>">
        <p for="comment">Athugasemd:</p>
        <textarea class="input" id="comment" type="text" name="comment" value="<% comment %>"></textarea>
      </label>
      <label class="petition__row">
        <input class="petition__check" type="checkbox" name="anonymous" value="true">
        <p class="">Ekki birta nafn á lista </p>
      </label>

      <div class="petition__errorMessages">
        <% if (errors.length > 0) { %>
          <h2>Vandræði við að senda umsókn:</h2>
          <ul class="errors">
            <% errors.forEach((err) => { %>
              <li class="error"><label  ><%= err.msg %></label></li>
            <% }); %>
          </ul>
        <% } %>
      </div>
      <div class="petition__button">
        <button><h2>Skrifa undir</h2></button>
      </div>
    </petition>
  </div>
</div>

<%- include('form') -%>

</main>
<%- include('footer') -%>